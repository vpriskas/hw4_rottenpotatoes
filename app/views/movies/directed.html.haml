-#  This file is app/views/movies/index.html.haml
%h1 All Movies from @director



%table#movies
  %thead
    %tr
      %th Title
      %th Rating
      %th Date Header
      %th Director
      
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= movie.director

= link_to 'Back to movie list', movies_path
